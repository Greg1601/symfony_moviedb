{% extends 'admin/admin_layout.html.twig' %}

{% block body %}
    <h1>Moviecast</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movieCast.id }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ movieCast.role }}</td>
            </tr>
            <tr>
                <th>Ordercredit</th>
                <td>{{ movieCast.orderCredit }}</td>
            </tr>
        </tbody>
    </table>

<hr>

    <ul class="list-unstyled list-inline">
        <li class="list-inline-item">
            <a class="btn btn-success" href="{{ path('movie_index') }}">Back to the list</a>
        </li>
        <li class="list-inline-item">
            <a class="btn btn-primary" href="{{ path('moviecast_edit', { 'id': movieCast.id, 'movie_id': movieCast.movie.id  }) }}">Edit</a>
        </li>
        <li class="list-inline-item">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
