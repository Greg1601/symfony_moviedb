{% extends 'admin/admin_layout.html.twig' %}

{% block body %}
    <h1>Users list</h1>

        <p>
            <a href="{{ path('admin_user_new') }}" class="btn btn-success btn-sm">Ajouter</a>
    </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Isactive</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('admin_user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
                <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul "list-unstyled list-inline">
                        <li class="list-inline-item">
                            <a href="{{ path('admin_user_show', { 'id': user.id }) }}" class="btn btn-success">show</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="{{ path('admin_user_edit', { 'id': user.id }) }}" class="btn btn-primary">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
