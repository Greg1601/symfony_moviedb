{% extends 'admin/admin_layout.html.twig' %}

{% block body %}
    <h1>People list</h1>

        <p>
            <a href="{{ path('person_new') }}" class="btn btn-success btn-sm">Ajouter</a>
    </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td><a href="{{ path('person_show', { 'id': person.id }) }}">{{ person.id }}</a></td>
                <td>{{ person.name }}</td>
                <td>
                    <ul "list-unstyled list-inline">
                        <li class="list-inline-item">
                            <a href="{{ path('person_show', { 'id': person.id }) }}" class="btn btn-success">show</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="{{ path('person_edit', { 'id': person.id }) }}" class="btn btn-primary">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
