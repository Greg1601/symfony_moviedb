<hr>

    <ul class="list-unstyled list-inline">
        <li class="list-inline-item">
            <a class="btn btn-success" href="{{ "{{ path('" ~ route_name_prefix ~ "_index') }}" }}">Back to the list</a>
        </li>

        {%- if ('edit' in actions) and (not hide_edit) %}

        <li class="list-inline-item">
            <a class="btn btn-primary" href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { '"~ identifier ~"': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">Edit</a>
        </li>

        {%- endif %}

        {%- if ('delete' in actions) and (not hide_delete) %}

        <li class="list-inline-item">
            {{ '{{ form_start(delete_form) }}' }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ '{{ form_end(delete_form) }}' }}
        </li>

        {%- endif %}

    </ul>
